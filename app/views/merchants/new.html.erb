<h1 class="mt-4 mb-2">Create Merchant</h1>

<%= form_tag "/merchants", method: :post do %>
  <section class='form-group form-width'>
    <p>
      <%= label_tag :name %>
      <%= text_field_tag :name, nil, class: 'form-control' %>
    </p>

    <p>
      <%= label_tag :address %>
      <%= text_area_tag :address, nil, class: 'form-control' %>
    </p>

    <p>
      <%= label_tag :city %>
      <%= text_field_tag :city, nil, class: 'form-control' %>
    </p>

    <p>
      <%= label_tag :state %>
      <%= text_field_tag :state, nil, class: 'form-control' %>
    </p>

    <p>
      <%= label_tag :zip %>
      <%= text_field_tag :zip, nil, class: 'form-control' %>
    </p>

    <br>

    <p>
      <%= submit_tag 'Create Merchant', class: 'btn btn-primary' %>
    </p>
  </section>
<% end %>

