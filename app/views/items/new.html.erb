<h1 class="mt-4 mb-2">Create New Item For <%=link_to @merchant.name, "/merchants/#{@merchant.id}" %></h1>

  <%= form_tag "/merchants/#{@merchant.id}/items", method: :post do %>
    <section class='form-group form-width'>
      <p>
        <%= label_tag :name %>
        <%= text_field_tag :name, nil, class: 'form-control' %>
      </p>

      <p>
        <%= label_tag :description %>
        <%= text_area_tag :description, nil, class: 'form-control' %>
      </p>

      <p>
        <%= label_tag :price %>
        <%= number_field_tag :price, nil, class: 'form-control', step: 0.01 %>
      </p>

      <p>
        <%= label_tag :image %>
        <%= text_field_tag :image, nil, class: 'form-control' %>
      </p>

      <p>
        <%= label_tag :inventory %>
        <%= number_field_tag :inventory, nil, class: 'form-control' %>
      </p>

      <br>

      <p>
        <%= submit_tag 'Create Item', class: 'btn btn-primary' %>
      </p>
    </section>
  <% end %>
