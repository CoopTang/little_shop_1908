<h1>Edit Review for <%=link_to @review.item.name, "/items/#{@review.item_id}" %></h1>

<center>
  <%= form_tag "/reviews/#{@review.id}", method: :patch  do %>
    <%= label_tag :title %>
    <%= text_field_tag :title, @review.title %>

    <%= label_tag :content %>
    <%= text_area_tag :content, @review.content %>

    <%= label_tag :rating %>
    <%= number_field_tag :rating, @review.rating, min: 1, max: 5, step: 1 %>

    <%= submit_tag 'Update Review' %>
  <% end %>
</center>
